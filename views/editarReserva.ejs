<%- include('partials/header') %>
    <div class="container mt-5">
        <div class="row">
            <div class="row mb-2">
                <div class="col-md-5">
                    <a href="/" id="btnRegresar" class="btn btn-sm btn-primary">Regresar</a>
                    <a href="/" class="btn btn-sm btn-info text-light">Inicio</a>
                </div>
            </div>

            <div class="mx-auto">
                <form action="#" id="formNuevaReserva" class="rounded border p-3" data-id="<%= id %>">
                    <h3 class="mb-3 text-center bg-primary text-light rounded p-2">Actualiza tu Reserva</h3>
                    <div class="row">
                        <div class="col col-md-6 col-sm-12 mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" required="true" class="form-control" id="nombre" name="nombre">
                        </div>
                        <div class="col col-md-6 col-sm-12 mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" required="true" class="form-control" id="apellido" name="apellido">
                        </div>
                    </div>
                    <div class="row">
                        <!-- Fecha vuelo -->
                        <div class="col col-md-6 col-sm-12 mb-3">
                            <label for="fecha_vuelo" class="form-label">Fecha de vuelo</label>
                            <input type="datetime-local" required="true" class="form-control" id="fecha_vuelo"
                                name="fecha_vuelo">
                        </div>
                        <!-- Cantidad de pasajeros -->
                        <div class="col col-sm-12 col-md-6 mb-3">
                            <label for="cantidad_pasajeros" class="form-label">Cantidad de pasajeros</label>
                            <input type="number" required="true" class="form-control" id="cantidad_pasajeros"
                                name="cantidad_pasajeros">
                        </div>
                    </div>

                    <div class="row">
                        <!-- Telefono -->
                        <div class="col col-sm-12 col-md-6 mb-3">
                            <label for="telefono" class="form-label">Tel√©fono</label>
                            <input type="text" required="true" class="form-control" id="telefono" name="telefono">
                        </div>

                        <!-- Email contacto -->
                        <div class="col col-sm-12 col-md-6 mb-3">
                            <label for="email" class="form-label">Email contacto:</label>
                            <input type="email" required="true" class="form-control" id="email" name="email">
                        </div>

                        <!-- Costo de la reserva -->
                        <div class="col col-sm-12 col-md-6 mb-3">
                            <label for="costo_reserva" class="form-label">Costo de la reserva</label>
                            <input type="text" required="true" class="form-control" id="costo_reserva"
                                name="costo_reserva">
                        </div>

                        <!-- Destino -->
                        <div class="col col-sm-12 col-md-6 mb-3">
                            <label for="destino" class="form-label">Destino</label>
                            <input type="text" required="true" class="form-control" id="destino" name="destino">
                        </div>

                    </div>

                    <div class="row d-flex align-items-center justify-content-end">
                        <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 col-2 mb-1">
                            <button type="submit" class="w-100 btn btn-sm btn-primary">Guardar</button>
                        </div>
                        <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 col-2 mb-1">
                            <a href="/" class="w-100 btn btn-sm btn-secondary">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="/js/editar-reserva.js"></script>
    <%- include('partials/footer') %>